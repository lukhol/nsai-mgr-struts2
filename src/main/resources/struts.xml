<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="i18n/MessageResources" />
	<constant name="struts.mapper.action.prefix.enabled" value="true" />
	
	<package name="/" extends="struts-default">
	
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<action name="*Login" class="com.politechnika.actions.UserAction" method="{1}">
			<result name="success" type="tiles">successView</result>
			<result name="input" type="tiles">firstView</result>
		</action>
		
		<action name="Locale" class="com.politechnika.actions.LocaleAction" method="execute">
			<result name="success" type="tiles">firstView</result>
		</action>
	</package>
</struts>
