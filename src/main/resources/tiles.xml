	</definition>
	
	<definition name="StudentNotesListDef" extends="baseLayout">
		<put-attribute name="body" value="/views/studentNotesList.jsp"/>
	</definition>
	
	<definition name="HomeDef" extends="baseLayout">
		<put-attribute name="body" value="/index.jsp"/>
